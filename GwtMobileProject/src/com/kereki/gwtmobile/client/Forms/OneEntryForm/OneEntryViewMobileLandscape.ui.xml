<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .important {
        	font-weight: bold;
        }
    </ui:style>

    <g:HTMLPanel>
        <h2>One entry - Mobile Landscape view</h2>
        <table style="width:100%;">
            <tr>
                <td>
                    <g:Label text="Date:"/>
                </td>
                <td>
                    <g:TextBox ui:field='dateTextbox' width='100%'/>
                </td>
            </tr>
            <tr>
                <td>
                    <g:Label text="Title:"/>
                </td>
                <td>
                    <g:TextBox ui:field='titleTextbox' width='100%'/>
                </td>
            </tr>
            <tr>
                <td>
                    <g:Label text="Text:"/>
                </td>
                <td>
                    <g:TextArea ui:field='textTextarea' width='100%'/>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <table style="width:100%;">
                        <tr>
                            <td>
                                <g:ListBox ui:field='moodPicker' width='100%'/>
                            </td>
                            <td>
                                <g:Image ui:field='moodIcon'/>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <g:Button text='Save' ui:field='saveButton' width='100%'/>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <g:Button text='Cancel' ui:field='cancelButton' width='100%'/>
                </td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder> 